# Shared environment configuration for docker-compose
NODE_ENV=development
BACKEND_PORT=4000
ADMIN_PORT=3000
CONSUMER_PORT=3001
BACKEND_URL=http://backend:4000
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Database credentials
DB_HOST=db
DB_PORT=5432
DB_USER=party_app
DB_PASSWORD=party_secret
DB_NAME=party
DB_LOGGING=false

# Postgres container configuration
POSTGRES_USER=party_app
POSTGRES_PASSWORD=party_secret
POSTGRES_DB=party

# pgAdmin access
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_me
